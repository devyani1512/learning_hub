<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            color: #333;
        }

        .main-content {
            padding: 20px;
        }

        /* Card container */
        .card-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* 3 cards in each row */
            gap: 20px;
            margin-top: 40px;
        }

        /* Individual card */
        .card {
            background-color: #fff;
            border: 2px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        /* Card hover effect */
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        /* Card header */
        .card h3 {
            color: #333;
            font-size: 18px;
            margin-bottom: 15px;
        }

        /* Link style */
        .card a {
            text-decoration: none;
            color: #fff;
            background-color: #4CAF50;
            padding: 10px 20px;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .card a:hover {
            background-color: #45a049;
        }

        /* Responsive Design - Stack cards on smaller screens */
        @media (max-width: 768px) {
            .card-container {
                grid-template-columns: repeat(2, 1fr); /* 2 cards in each row */
            }
        }

        @media (max-width: 480px) {
            .card-container {
                grid-template-columns: 1fr; /* 1 card in each row */
            }
        }

    </style>
</head>
<body>

    <!-- Include Navigation -->
    <!-- Ensure this file is correctly located -->

    <div class="main-content">
        <h1>Admin Dashboard</h1>
        
        <!-- Cards for Admin Tasks -->
        <div class="card-container">

            <!-- Add New Subject Card -->
            <div class="card">
                <h3>Add New Subject</h3>
                <a href="/add_subject">Go to Add</a>
            </div>

            <!-- Edit Subject Card -->
            <div class="card">
                <h3>Edit a Subject</h3>
                <a href="/edit_subject">Go to Edit</a>
            </div>

            <!-- Delete Subject Card -->
            <div class="card">
                <h3>Delete a Subject</h3>
                <a href="/delete_subject">Go to Delete</a>
            </div>

            <!-- Add Data Link Card -->
            <div class="card">
                <h3>Add a Data Link</h3>
                <a href="/add_link">Go to Add</a>
            </div>

            <!-- Edit Data Link Card -->
            <div class="card">
                <h3>Edit a Data Link</h3>
                <a href="/edit_link">Go to Edit</a>
            </div>

            <!-- Delete Data Link Card -->
            <div class="card">
                <h3>Delete a Data Link</h3>
                <a href="/delete_link">Go to Delete</a>
            </div>

        </div>
    </div>

    <!-- Include Footer -->
    <!-- Ensure this file is correctly located -->

    <script src="/js/admin_dashboard.js"></script>
</body>
</html>
